<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>RH_TET_SkavenWarpBattery</defName>
    <label>warpstone battery</label>
    <description>A small warpstone battery, constantly generating distinct amounts of warp-power. Clan Skryre uses such potent devices to power their various war machines, chief among them being the Warp-Lightning Cannon. Skryre tech is highly volatile at the best of times, so place these batteries carefully.</description>
    <graphicData>
      <texPath>Things/Building/Power/SkavenWarpBattery</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.4)</drawSize>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <thingCategories>
      <li>RH_TET_Skaven_BuildingsPower</li>
    </thingCategories>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <uiIconScale>0.9</uiIconScale>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <resourcesFractionWhenDeconstructed>6</resourcesFractionWhenDeconstructed>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <canOverlapZones>false</canOverlapZones>
    <blockWind>true</blockWind>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <minifiedDef>MinifiedThing</minifiedDef>
    <designationCategory>Power</designationCategory>
    <statBases>
      <MarketValue>200</MarketValue>
      <WorkToBuild>1500</WorkToBuild>
      <MaxHitPoints>120</MaxHitPoints>
      <Flammability>1</Flammability>
      <Mass>12</Mass>
      <Beauty>-5</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(1, 1)</size>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <RH_TET_Skaven_Warpstone>10</RH_TET_Skaven_Warpstone>
    </costList>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.9</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass>
        <basePowerConsumption>-150</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(113,141,117,0)</glowColor>
      </li>
    </comps>
    <researchPrerequisites>
      <li>RH_TET_SkavenSecurity_SkryreAdvanced</li>
    </researchPrerequisites>
  </ThingDef>
  
</Defs>
