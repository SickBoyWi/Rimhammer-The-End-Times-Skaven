<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Feed Hopper -->
  <ThingDef ParentName="BuildingBase">
    <defName>RH_TET_Skaven_FeedDispenser</defName>
    <label>feed hopper</label>
    <description>A giant feed hopper that is used to keep food on hand. Hordes of skaven dump anything into them, and then take a meal from them when they're hungry. No race with any self respect would find it pleasant to be in the same room as this, due to the terrible smell coming off it, much less so to actually eat from it. Slop buckets for food to be added to the feed hopper are placed nearby, and skaven will automatically dump the slop pail into the feed hopper when it looks like it needs more food. The slop buckets are required to be placed next to the feed hopper for the feed hopper to be usable.\n\nMeals from the feed hopper require less raw resources than any other source in order to provide a meal that will satisfy a pawn.</description>
    <thingClass>TheEndTimes_Skaven.Building_FeedHopper</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/RH_TET_Skaven_FeedHopper</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <color>(232,255,191)</color>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0.02,0.25,2.96,2.85)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
      <shadowData>
        <volume>(2.87,0.75,3.05)</volume>
        <offset>(0,0,0.38)</offset>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <blockWind>false</blockWind>
    <fillPercent>.75</fillPercent>
    <pathCost>80</pathCost>
    <statBases>
      <WorkToBuild>1100</WorkToBuild>
      <MaxHitPoints>350</MaxHitPoints>
      <Flammability>0.0</Flammability>
    </statBases>
    <building>
      <isMealSource>true</isMealSource>
      <wantsHopperAdjacent>true</wantsHopperAdjacent>
      <nutritionCostPerDispense>0.25</nutritionCostPerDispense>
      <soundDispense>DispensePaste</soundDispense>
      <forceShowRoomStats>true</forceShowRoomStats>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <comps>      
	  <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>18.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
            <li>RH_TET_Coal</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>12</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>23</heatPerSecond>
        <heatPushMaxTemperature>28</heatPushMaxTemperature>
      </li>
    </comps>
    <size>(2,2)</size>
	<stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>120</costStuffCount>
    <tickerType>Normal</tickerType>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <socialPropernessMatters>false</socialPropernessMatters>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
    <designationHotKey>Misc6</designationHotKey>
    <canOverlapZones>false</canOverlapZones>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>RH_TET_Skaven_Cooking</li>
    </researchPrerequisites>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>RH_TET_Skaven_SlopBucket</defName>
    <label>slop bucket</label>
    <description>Holds food to be dumped into the skaven feed hopper. The feed hopper requires these buckets to be placed next to them, and filled with slop in order to be used.</description>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/RH_TET_Skaven_HoppyPail</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(.8,.8</drawSize>
      <damageData>
        <rect>(0.05,0.1,0.9,0.9)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <pathCost>42</pathCost>
    <canOverlapZones>false</canOverlapZones>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
          <specialFiltersToDisallow>
            <li>AllowPlantFood</li>
          </specialFiltersToDisallow>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
        </filter>
      </defaultStorageSettings>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <castEdgeShadows>false</castEdgeShadows>
    <statBases>
      <WorkToBuild>100</WorkToBuild>
      <MaxHitPoints>80</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
	<stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <tickerType>Never</tickerType>
    <rotatable>true</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <designationCategory>Production</designationCategory>
    <surfaceType>Item</surfaceType>
    <placeWorkers>
      <li>TheEndTimes_Skaven.PlaceWorker_NextToPailAccepter</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>RH_TET_Skaven_Cooking</li>
    </researchPrerequisites>
    <uiIconPath>UI/RH_TET_Skaven_SlopPail_MenuIcon</uiIconPath>
    <uiIconScale>0.85</uiIconScale>
  </ThingDef>

</Defs>
